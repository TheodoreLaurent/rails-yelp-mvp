
<!-- app/views/products/_form.html.erb -->
<br>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <% if @restaurant.errors.any? %>
      <h2>DO THINGS PROPER</h2>
      <ul>

        <% @restaurant.errors.full_messages.each do |error| %>
        <li><%= error %></li>
        <% end %>
      </ul>

      <% end %>

      <%= simple_form_for(@restaurant) do |f| %>
      <%= f.error_notification %>

      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :category, as: :select, collection: Restaurant::CATEGORIES %>
      <%= f.input :phone_number %>
      <%= f.submit class:"btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
