<h1>Restaurants</h1>

<br>
<%= link_to "Add new restaurant", new_restaurant_path %>
<br>
<table class="table table-hover ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
    <tr>
      <td> <%= restaurant.name  %></td>
      <td> <%= restaurant.address %></td>
      <td> <%= link_to "More details", restaurant_path(restaurant.id) %></td>
      <% end %>
    </tr>
  </tbody>
</table>
